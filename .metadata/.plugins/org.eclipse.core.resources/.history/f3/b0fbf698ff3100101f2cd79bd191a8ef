package com.tienda.controller;


import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.tienda.model.ArticuloRopa;
import com.tienda.repository.ArticuloRopaRepository;
import java.util.List;

@RestController
@RequestMapping("/api/articulos-ropa")
public class ArticuloRopaController {
	
	@Autowired
	private ArticuloRopaRepository repository;
	
	@GetMapping
	public List<ArticuloRopa> getAll() {
		return repository.findAll();
	}
	
	@GetMapping("/{id}")
	public ArticuloRopa getById(@PathVariable Long id) {
		return repository.findById(id).orElse(null);
	}
	
	@PostMapping("/{id}")
	public ArticuloRopa create(@RequestBody ArticuloRopa item) {
		return repository.save(item);
	}
	
	@PutMapping("/{id}")
	public ArticuloRopa update(@PathVariable Long id, @RequestBody ArticuloRopa item) {
		ArticuloRopa existing = repository.findById(id).orElse(null);
		if (existing != null) {
			existing.setNombre(item.getNombre());
			existing.setDescripcion(item.getDescripcion());
			existing.setTalla(item.getTalla());
			existing.setColor(item.getColor());
			existing.setPrecio(item.getPrecio());
			existing.setCantidad(item.getCantidad());
			existing.setCategoria(item.getCategoria());
			return repository.save(existing);
		}
		return null;
	}

	@DeleteMapping("/{id}")
	public void delete(@PathVariable Long id) {
		repository.deleteById(id);
	}
}
